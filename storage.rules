rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload to their own evidence folder
    match /evidence/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload their own avatars
    match /avatars/{fileName} {
      allow read: if true; // Public read is usually okay for avatars, or restrict to auth
      allow write: if request.auth != null && fileName.matches(request.auth.uid + '.*');
    }
    
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
